<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/a_destination">
    <fragment
        android:id= "@+id/a_destination"
        android:name="lund.johan.testingjetpacknavigation.screens.FragmentA"
        tools:layout="@layout/fragment_a">
        <action
            android:id="@+id/action_a_destination_to_b_destination"
            app:destination="@id/b_destination" />
    </fragment>
    <fragment
        android:id= "@+id/b_destination"
        android:name="lund.johan.testingjetpacknavigation.screens.FragmentB"
        tools:layout="@layout/fragment_b"
        >
        <action
            android:id="@+id/action_b_destination_to_c_destination"
            app:destination="@id/c_destination"
            app:popUpTo="@+id/a_destination"/>
        <argument
            android:name="string_arg"
            android:defaultValue="not yet changed argument"
            app:argType="string" />
    </fragment>
    <fragment
        android:id= "@+id/c_destination"
        android:name="lund.johan.testingjetpacknavigation.screens.FragmentC"
        tools:layout="@layout/fragment_c"
        >
        <action
            android:id="@+id/action_c_destination_to_a_destination"
            app:destination="@id/a_destination"
            app:popUpTo="@+id/a_destination"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>